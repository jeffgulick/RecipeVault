@page
@model RecipeVault.Pages_Recipes.DeleteModel

@{
    ViewData["Title"] = "Delete Recipe";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Delete Recipe</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Are you sure you want to delete this recipe?</h5>
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Recipe.RecipeName)</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Recipe.Description)</dd>

                        <dt class="col-sm-3">Instructions</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Recipe.Instructions)</dd>

                        <dt class="col-sm-3">Cook Time</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Recipe.CookTime)</dd>

                        <dt class="col-sm-3">Image URL</dt>
                        <dd class="col-sm-9">
                            <a href="@Model.Recipe.ImageURL" class="img-fluid" target="_blank">@Model.Recipe.ImageURL</a>
                        </dd>

                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Recipe.Category.CategoryName)</dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <form method="post">
                        <button type="submit" class="btn btn-danger me-2">Delete</button>
                        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
